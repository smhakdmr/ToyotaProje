@model EntityLayer.Concrete.User

@{
    ViewData["Title"] = "Login";
    ViewBag.HideNavbar = true;
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background-color: #2e2e2e;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
        color: #fff;
        width: 100%;
        max-width: 400px;
    }

        .login-card img {
            display: block;
            margin: 0 auto 20px auto;
            width: 150px;
        }

    .form-label {
        color: #ccc;
    }

    .form-control {
        background: #444;
        border: none;
        color: #fff;
    }

        .form-control:focus {
            background: #555;
            border: none;
            box-shadow: none;
        }

    .btn-toyota {
        background-color: #0066cc;
        border: none;
        width: 100%;
    }

        .btn-toyota:hover {
            background-color: #004d99;
        }
</style>

<div class="login-container">
    <div class="login-card">
        <img src="~/images/toyota.png" alt="Toyota Logo">

        <form id="loginForm">
            <div class="mb-4">
                <label class="form-label">Mail Adresi</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Mail Adresi" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                <label class="form-label">Şifre</label>
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "Şifre" })
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-toyota">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    $(document).ready(function () {
        $("#loginForm").on("submit", function (e) {
            e.preventDefault();

            var formData = {
                Email: $("#loginForm").find('input[name="Email"]').val(),
                Password: $("#loginForm").find('input[name="Password"]').val()
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("Index", "Login")',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        window.location.href = response.redirectUrl;
                    } else {
                        swal("Hata!", "Giriş yapılamadı. Lütfen bilgilerinizi kontrol edin.", "error");
                    }
                },
                error: function () {
                    swal("Hata!", "Bir sorun oluştu. Lütfen tekrar deneyin.", "error");
                }
            });
        });
    });
</script>
